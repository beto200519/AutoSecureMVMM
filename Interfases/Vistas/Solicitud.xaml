<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Interfases.Vistas.Solicitud"
             Title="Solicitud">

    <ContentPage.Content>
        <StackLayout Padding="15" Spacing="10" BackgroundColor="#292929" Opacity="0.9">

            <Label Text="Solicitudes de Acceso" 
                   FontSize="26" 
                   FontAttributes="Bold" 
                   TextColor="White"
                   HorizontalOptions="Center" 
                   Padding="20"/>

            <CollectionView x:Name="solicitudesCollection"
                            ItemsSource="{Binding Solicitudes}"
                            SelectionMode="Multiple">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="15" Margin="5" CornerRadius="12" BackgroundColor="White">
                            <StackLayout Orientation="Horizontal" Spacing="10">
                                <CheckBox IsChecked="{Binding Seleccionado, Mode=TwoWay}" />
                                <Label Text="{Binding Descripcion}" FontSize="16" TextColor="Black"/>
                                <Label Text="{Binding Estado}" FontSize="14" TextColor="Gray"/>
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Enviar SelecciÃ³n por Correo"
        BackgroundColor="#007ACC"
        TextColor="White"
        CornerRadius="8"
        Padding="10"
        Command="{Binding EnviarCorreoCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>